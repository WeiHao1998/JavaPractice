<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd"
         version="4.0">
    <!--web: localhost/web应用名/具体servlet定位符-->
    <servlet>
        <servlet-name>HelloServlet</servlet-name>
        <servlet-class>com.xaana.servlet.HelloServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>HelloServlet</servlet-name>
        <url-pattern>/HelloServlet</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>HelloRequest</servlet-name>
        <servlet-class>com.xaana.servlet.HelloRequest</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>HelloRequest</servlet-name>
        <url-pattern>/HelloRequest</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>HelloServletParam</servlet-name>
        <servlet-class>com.xaana.servlet.HelloServletParam</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>HelloServletParam</servlet-name>
        <url-pattern>/HelloServletParam</url-pattern>
    </servlet-mapping>
</web-app>